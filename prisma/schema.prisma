generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Store {
  name String @db.VarChar(255) @unique
  branch String @db.VarChar(255)
  branchId String @db.VarChar(255)
}

model Payment {
  paymentId String @db.VarChar(4) @id
  paid String @db.VarChar(4)
  methodId String @db.VarChar(4)
  methodName String @db.VarChar(15)
  approvalCode String @db.VarChar(6)
}

model Transaction {
  transactionId String @db.VarChar(32) @id
  totalItem String @db.VarChar(3)
  Item String @db.VarChar(255)
  totalTransaction String @db.VarChar(7)
  timestamp DateTime @db.Timestamp
}
model Item {
   itemId String @db.VarChar(32) @id
   quantity String @db.VarChar(2)
   price String @db.VarChar(12)
}

model Product {
  barcode String @db.VarChar(12) @id 
  productName String @db.VarChar(30)
  productCategory String @db.VarChar(255) 
  supplier String @db.VarChar(255)
  stock String @db.VarChar(255)
}
